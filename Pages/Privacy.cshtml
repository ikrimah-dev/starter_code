@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<!-- Hero Section -->
<div class="hero min-h-48 bg-base-200">
    <div class="hero-content text-center">
        <div class="max-w-md mb-4">
            <h1 class="text-5xl font-bold">Privacy Policy</h1>
            <p class="py-6">Your privacy is important to us. This policy outlines how we collect, use, and protect your
                personal information.</p>
        </div>
    </div>
</div>

<!-- Info Section -->
<section class="container mx-auto px-4 py-8">
    <div class="text-center mb-12">
        <h2 class="text-4xl font-bold mb-4">Our Commitment to Privacy</h2>
        <p class="text-lg text-base-content/70">We handle your data with care and transparency</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="card bg-base-100 border border-gray-200 shadow ">
            <div class="card-body items-center text-center">
                <h3 class="card-title">Data Collection</h3>
                <p>We only collect what's necessary for service delivery</p>
            </div>
        </div>

        <div class="card bg-base-100 border border-gray-200 shadow ">
            <div class="card-body items-center text-center">
                <h3 class="card-title">Data Protection</h3>
                <p>Your information is encrypted and securely stored</p>
            </div>
        </div>

        <div class="card bg-base-100 border border-gray-200 shadow ">
            <div class="card-body items-center text-center">
                <h3 class="card-title">Your Rights</h3>
                <p>Access, update, or delete your data anytime</p>
            </div>
        </div>
    </div>
</section>
